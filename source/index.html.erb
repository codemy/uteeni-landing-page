      <section id="login">
        <h1>
          Sign up
        </h1>
        <h4>for the Beta Release of Thailand's Premier Directory</h4>
        <ul id="login-grid" class="login-grid clearfix">
          
          <li>
            <span class="rb-temp"><img src="images/login-icon-customer.png" alt=""></span>
            <span class="rb-temp">User</span>
            <div class="rb-overlay">
              <span class="rb-close">&times;</span>
              <div class="rb-week">
                <div>
                  <div class="form-container">
                    <form action="#" id="user-form" class="user-form">
                      <fieldset>
                        <div>
                         <label for="email">User *</label> 
                         <input type="email" id="email" name="email" placeholder="e.g. john-doe@example.com" title="Please enter a valid email" required />
                        </div>
                      </fieldset>
                      <input type="submit" value="Sign up" class="submit-btn" />
                      <p class="submit-message">
                        Thank you for signing up.<br>
                        We will send you a formal invitation and link when our Beta has launched... Coming Very Soon!
                      </p>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <li>
            <span class="rb-temp"><img src="images/login-icon-business.png" alt=""></span>
            <span class="rb-temp">Business</span>
            <div class="rb-overlay">
              <span class="rb-close">&times;</span>
              <div class="rb-week">
                <div>
                  <div class="form-container">
                    <form action="#" id="business-form">
                      <fieldset>
                        <div>
                         <label for="email">Business *</label> 
                         <input type="email" id="email" name="email" placeholder="e.g. john-doe@example.com" required />
                        </div>
                        <div>
                          <input id="business-name" name="business-name" type="text" placeholder="e.g Company Co Ltd" required autofocus> 
                        </div>
                        <div>
                          <input id="phone-number" name="phone-number" type="text" placeholder="e.g 123456789" required autofocus>
                        </div>
                      </fieldset>
                      <input type="submit" value="Sign up" class="submit-btn" />
                      <p class="submit-message">
                        Thank you for inquiring.<br>
                        A Uteeni representative will be in touch with you shortly.
                      </p>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </li>
